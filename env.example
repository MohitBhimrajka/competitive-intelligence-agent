# API Configuration
API_BASE_URL=http://localhost:8000

# Supervity API Credentials - Used for email reports and document processing
SUPERVITY_API_TOKEN=your_api_token
SUPERVITY_API_ORG=your_org_id
SUPERVITY_AGENT_ID=your_agent_id
SUPERVITY_SKILL_ID=your_skill_id
SUPERVITY_EMAIL_AGENT_ID=your_email_agent_id
SUPERVITY_EMAIL_SKILL_ID=your_email_skill_id

# Google Service Account Key - Used for Google Drive integration
# You need to add the contents of service-account-key.json as an environment variable
# for the backend service in Render
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# Google Drive Folder ID (Optional) - Specific folder where reports are saved
GOOGLE_DRIVE_FOLDER_ID=your_folder_id

# Google API Key - Used for Gemini AI models
# Required for RAG service, news analysis, and generative tasks
GOOGLE_API_KEY=your_gemini_api_key

# News API Key - Used for fetching news articles
# Create an account at https://newsapi.org to get a key
NEWS_API_KEY=your_news_api_key 